{
  "name": "@draftbit/coding-challenge-prism",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@rescript/react": "^0.10.3",
    "@tanstack/react-query": "^4.36.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^22.8.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^10.4.20",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "exponential-backoff": "^3.1.0",
    "express": "^4.18.1",
    "joi": "^17.13.3",
    "lucide-react": "^0.453.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "postcss": "^8.4.47",
    "react": "18",
    "react-dom": "18",
    "react-hot-toast": "^2.4.1",
    "react-scripts": "4.0.3",
    "reflect-metadata": "^0.2.2",
    "signal-exit": "^3.0.7",
    "tailwindcss": "^3.4.14",
    "typeorm": "^0.3.20",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^5.6.3",
    "wait-on": "^6.0.1",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "frontend:start": "concurrently --kill-others --names='webpack,rescript' 'NODE_OPTIONS=--openssl-legacy-provider react-scripts start' 'yarn re:start'",
    "build": "tsc",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "re:build": "rescript",
    "re:start": "rescript build -w",
    "backend:start": "concurrently --kill-others --names 'server,db' 'yarn backend:server' 'yarn backend:db'",
    "backend:server": "nodemon dev.js",
    "backend:build-docker": "docker build -t code-challenge .",
    "backend:psql": "psql postgres://$(dotenv -p PGUSER):$(dotenv -p PGPASSWORD)@$(dotenv -p PGHOST):$(dotenv -p PGPORT)/$(dotenv -p PGDATABASE)",
    "backend:db": "yarn backend:build-docker && docker run --rm --name draftbit-challenge -e POSTGRES_PASSWORD=$(dotenv -p PGPASSWORD) -p $(dotenv -p PGPORT):5432 code-challenge",
    "seed": "ts-node src/server/seed/index.ts",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "migration:run": "yarn run typeorm -- migration:run -d src/server/data-source.ts",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n <migration-name>",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/register": "^7.18.9",
    "@tanstack/eslint-plugin-query": "^5.59.7",
    "@types/convict": "^6.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.3.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^6.0.0",
    "gentype": "^4.2.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rescript": "^9.1.4",
    "ts-node": "^10.9.2"
  }
}
